fn - j : yabai -m window --focus south || yabai -m display --focus south
fn - k : yabai -m window --focus north || yabai -m display --focus north
fn - h : yabai -m window --focus west || yabai -m display --focus west
fn - l : yabai -m window --focus east || yabai -m display --focus east

shift + fn - j : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
shift + fn - k : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
shift + fn - h : yabai -m window --swap west || $(yabai -m window --display west; yabai -m window --focus west)
shift + fn - l : yabai -m window --swap east || $(yabai -m window --display east; yabai -m window --focus east)

fn + cmd - h : yabai -m window --resize right:-100:0
fn + cmd - j : yabai -m window --resize bottom:0:100
fn + cmd - k : yabai -m window --resize top:0:-100
fn + cmd - l : yabai -m window --resize right:100:0

shift + fn - r : yabai -m space --rotate 270
shift + fn - y : yabai -m space --mirror y-axis
shift + fn - x : yabai -m space --mirror x-axis
shift + fn - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

shift + fn - m : yabai -m window --toggle zoom-fullscreen
shift + fn - e : yabai -m space --balance
